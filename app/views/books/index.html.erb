<main>
  <%= render 'list', books: Book.new, user: @user %>
      <div class="cil-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
            <tbody>
              <% @books.each do |book| %>
              <tr>
                <td>
                  <%= link_to user_path(@user,book.user) do %>
                  <%= image_tag book.user.get_profile_image(100, 100) %>
                  <% end %>
                </td>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
              </tr>
             <% end %>
            </tbody>
          </thead>
        </table>
      </div>
</main>