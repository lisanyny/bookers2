<main>
  <%= render 'books/list', books: Book.new, user: @user %>
      <div class="cil-md-8 offset-md-1">
        <h2>Users</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
              <th colspan="3"></th>
            </tr>
            <tbody>
              <% @users.each do |user| %>
              <tr>
                <td>
                  <%= image_tag user.get_profile_image(100, 100) %>
                </td>
                <td><%= user.name %></td>
                <td><%= link_to 'Show', user_path(user.id) %></td>
              </tr>
             <% end %>
            </tbody>
          </thead>
        </table>
      </div>
</main>